<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <ImageView
            android:id="@+id/ic_detail_item"
            android:src="@drawable/ab"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mã sản phẩm:"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_id"
                android:text="1"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/jet"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tên sản phẩm:"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_name"
                android:text="Air Blade 2017"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/jet"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Loại xe:"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_type"
                android:text="Tay ga"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/jet" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nhà sản xuất:"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_producer"
                android:text="Honda"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/jet" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Giá tiền:"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_price"
                android:text="45.000.000 đ"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/jet" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Mô tả:"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_detail_describe"
                android:text="asdsadasdasdsadasdsadadasdasdasd"
                android:textSize="8pt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="@color/jet" />

        </LinearLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_detail_addcart"
            android:text="Thêm vào giỏ hàng"
            android:layout_marginTop="50dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bishop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OrderConfirmActivity"
            android:label="Chi tiết đơn hàng" />
        <activity
            android:name=".FeedBackActivity"
            android:label="Feedback" />
        <activity
            android:name=".InsuranceOrderActivity"
            android:label="Đặt mua bảo hiểm" />
        <activity
            android:name=".ItemDetailActivity"
            android:label="Chi tiết sản phẩm" />
        <activity
            android:name=".CartActivity"
            android:label="Giỏ hàng" />
        <activity
            android:name=".InfoActivity"
            android:label="Thông tin cá nhân" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SignInActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>